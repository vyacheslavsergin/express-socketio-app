<%- include ('partials/header'); %>

<%- include ('partials/navbar'); %>

    <div class="container">
        <div class="row">
            <% if (hasErrors) { %>
                <h4>Errors</h4>
                <ul class="collection">
                    <% _.forEach(messages, function (error) { %>
                        <li class="collection-item"><%=error %></li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
        <div class="row">
            <form
                class="col s12 m12 l6 offset-l3"
                action="/signup"
                method="post"
            >
                <h4 class="center-align">Register</h4>
                <div class="row">
                    <div class="input-field">
                        <input
                            id="first_name"
                            type="text"
                            name="username"
                            class="validate"
                        >
                        <label for="first_name">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input
                            id="email"
                            type="email"
                            name="email"
                            class="validate"
                        >
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input
                            id="password"
                            type="password"
                            name="password"
                            class="validate"
                        >
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <a class="left" href="/">Login</a>
                    <button class="waves-effect waves-light btn right" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>

